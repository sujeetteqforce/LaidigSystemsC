@model  LaidigSystemsC.Models.DelayedUpload


@{
    ViewBag.Title = "";
}


@if (ViewBag.Error != null)
{
    <h3 style="color:red ;font-family:'Times New Roman', Times, serif;font-size:18px">@ViewBag.Error</h3>
}
else
{
    <h3 style="color:green;font-family:'Times New Roman', Times, serif;font-size:18px">@ViewBag.Message</h3>
}


@using (Html.BeginForm("Index", "DelayedUplaod", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>DatalogAB File upload</legend>

        <div class="editor-label">
            <label>DatalogAB Files:</label>
        </div>
        <div>
            <table>
                <tr>
                    <td>
                        @Html.Label("Select Type")
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.RadioButton("rbGrp", "Delayed", isChecked: false) @Html.Label("Delayed Upload")
                        @Html.RadioButton("rbGrp", "Instant", isChecked: false) @Html.Label("Instant Upload")
                    </td>
                </tr>
            </table>
        </div>
        <div class="editor-field">
            <input type="file" name="fileNames" multiple="multiple" id="fileNames" />
        </div>

        <div>
            <p>
                <input type="submit" value="DatalogAB Files Upload" id="btnSubmit" />
            </p>
        </div>
    </fieldset>
}
